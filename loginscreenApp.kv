<LoginPge>:
    canvas:
        Color:
            rgba: 250/255, 250/255, 250/255, 1
        Rectangle:
            size: self.width, self.height

    BoxLayout:
        orientation: "vertical"
        padding: "10dp"

        Label:
            markup: True
            text: "[b]Welcome Back[/b]"
            text_size: self.size
            font_size: "25dp"
            color: 0, 0, 0, 1
            size_hint: 1, 0.4
        Label:
            text: "Please sign into your account"
            text_size: self.size
            valign: "middle"
            font_size: "15dp"
            color: 0, 0, 0, 1
            size_hint: 1, 0.2
            # pos_hint: {"x":1, "top":0.0}
        Label:
            size_hint: 1, .4
        # Sign in email prompt
        TextInput:
            on_hint_text: "Email Address: "
            multiline: False
            hint_text: "Email Address: "
            color: 0, 0, 0, .85
            size_hint: 1, .3
            on_text_validate: root.on_info_click(self)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 13)
                    width: 1
        Label:
            size_hint: 1, .05
        # Sign in password prompt
        TextInput:
            multiline: False
            hint_text: "Password: "
            color: 0, 0, 0, .85
            size_hint: 1, .3
            on_text_validate: root.on_info_click(self)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 13)
                    width: 1
        # Forgot password support link
        Label:
            text: "Forgot password?"
            size_hint: .4, .23
            pos_hint: {"right": 1}
            text_size: self.size
            valign: "bottom"
            halign: "right"
            color: 0, 0, 0, .85
        Label:
            size_hint: 1, .4
        # Sign in button
        Button:
            text: "Sign in"
            color: 250/255, 250/255, 250/255, 1
            size_hint: 1, .3
            # pos_hint: {"x":.15}
            background_color: 0, 0, 0, 0
            on_press: root.on_signin_press(self)
            on_release: root.on_signin_release(self)
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
        # Sign up link(tho not functioning yet)
        Label:
            markup: True
            text: "Don't have an account? [color=0000FF]Signup[/color]"
            size_hint: 1, .35
            color: 0, 0, 0, 1
        Label:
            size_hint: 1, .25
        # Other sign in options
        Label:
            text: "or continue with"
            size_hint: 1, .1
            color: 0, 0, 0, 1
        Label:
            size_hint: 1, .1
        # Facebook
        Button:
            text: "Facebook"
            color: 0, 0, 0, 1
            size_hint: 1, .25
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 16)
                    width: 1.1
        Label:
            size_hint: 1, .05
        # Google
        Button:
            text: "Google"
            color: 0, 0, 0, 1
            size_hint: 1, .25
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 16)
                    width: 1.1
        Label:
            size_hint: 1, .05
        # Github
        Button:
            text: "Github"
            color: 0, 0, 0, 1
            size_hint: 1, .25
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rounded_rectangle:(self.pos[0], self.pos[1], self.size[0], self.size[1], 16)
                    width: 1.1
        Label:
            size_hint: 1, .4
